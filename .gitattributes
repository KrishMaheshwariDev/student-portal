# Auto-detect text files and normalize to LF
* text=auto eol=lf

# Explicit line endings
*.bat text eol=crlf
*.cmd text eol=crlf
*.sh  text eol=lf

# Java / Kotlin / Gradle files
*.java text eol=lf
*.kt   text eol=lf
*.gradle text eol=lf
*.gradle.kts text eol=lf
gradlew text eol=lf
gradlew.bat text eol=crlf
gradle-wrapper.properties text eol=lf

# Config files
*.yml  text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.xml  text eol=lf
*.md   text eol=lf
*.txt  text eol=lf
*.gitignore text eol=lf
.gitattributes text eol=lf

# Node/Frontend
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Binary files (no eol conversion)
*.jar binary
*.war binary
*.zip binary
*.exe binary
*.dll binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.mp4 binary
*.mp3 binary
